<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_wallet_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="ss"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/my_wallet_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_wallet_item_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="ss"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/my_wallet_item_go_next_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_wallet_item_name"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/my_wallet_item_detail"
                android:src="@drawable/my_selected" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>